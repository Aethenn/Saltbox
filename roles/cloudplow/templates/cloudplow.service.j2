[Unit]
Description=Cloudplow
After=network-online.target

[Service]
User={{ user.name }}
Group={{ user.name }}
Type=simple
Environment=LC_ALL=C.UTF-8
Environment=LANG=C.UTF-8
WorkingDirectory={{ folder_path }}/
ExecStart=/usr/bin/python3 {{ script_path }} run --loglevel=INFO
ExecStopPost=/bin/rm -rf {{ folder_path }}/locks
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
